<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
 PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
  "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  <display-name>eXoAppWeb</display-name>
	<description>
    This application is a portlet. It can not be used outside a portal.
    This web.xml file is mandatory in each .par archive file.
	</description>	

  <context-param>
    <param-name>exo.application</param-name>
    <param-value>
      org.exoplatform.application.web.WebBrowserApplication,
      org.exoplatform.application.console.ExoConsoleApplication
    </param-value>
  </context-param>
  
  <listener>
    <listener-class>org.exoplatform.web.application.ApplicationRegister</listener-class>
  </listener>
</web-app>
