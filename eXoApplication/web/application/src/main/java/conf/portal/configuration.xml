    <type>org.exoplatform.web.WebAppController</type>
  </component>

  <external-component-plugins>
    <target-component>org.exoplatform.web.WebAppController</target-component>
    <component-plugin> 
      <name>add.application.eXoBrowser</name>
      <set-method>addApplication</set-method>
      <type>org.exoplatform.application.web.WebBrowserApplication</type>
    </component-plugin>

    <component-plugin> 
      <name>add.application.eXoConsole</name>
      <set-method>addApplication</set-method>
      <type>org.exoplatform.application.console.ExoConsoleApplication</type>
    </component-plugin>
  </external-component-plugins>  
</configuration>
