<?xml version="1.0" encoding="ISO-8859-1"?>
<portal-config>
  <portal-name>classic</portal-name>
  <locale>en</locale>
  <access-permissions>Everyone</access-permissions>
  <edit-permission>*:/platform/administrators</edit-permission>
  <creator>root</creator>
  <properties>
    <entry key="sessionAlive">onDemand</entry>
  </properties>
    
 	<portal-layout>
		<container template="system:/groovy/portal/webui/container/UIToolbarContainer.gtmpl">
		  <access-permissions>*:/platform/user</access-permissions>
			<container id="StarToolBarPortelt" template="system:/groovy/portal/webui/container/UIContainer.gtmpl">
			  <application>
			    <instance-id>portal#classic:/exoadmin/StarToolbarPortlet/starportlet</instance-id>
		      <access-permissions>Everyone</access-permissions>
			    <show-info-bar>false</show-info-bar>
			  </application>			
			</container>
			<container id="UserToolBarPortelt" template="system:/groovy/portal/webui/container/UIContainer.gtmpl">
			  <application>
			    <instance-id>portal#classic:/exoadmin/UserToolbarPortlet/userportlet</instance-id>
		      <access-permissions>Everyone</access-permissions>
			    <show-info-bar>false</show-info-bar>
			  </application>			
			</container>
			<container id="AdminToolBarPortelt" template="system:/groovy/portal/webui/container/UIContainer.gtmpl">
			  <application>
			    <instance-id>portal#classic:/web/HomePagePortlet/adminportlet</instance-id>
		      <access-permissions>Everyone</access-permissions>
			    <show-info-bar>false</show-info-bar>
			  </application>
			</container>
		</container>"
        
	  <application>
	    <instance-id>portal#classic:/web/BannerPortlet/banner</instance-id>
      <access-permissions>Everyone</access-permissions>
	    <show-info-bar>false</show-info-bar>
	  </application>

	  <application>
	  	<instance-id>portal#classic:/web/NavigationPortlet/toolbar</instance-id>
      <access-permissions>Everyone</access-permissions>
	    <show-info-bar>false</show-info-bar>
	  </application>
		
	  <application>
	    <instance-id>portal#classic:/web/BreadcumbsPortlet/breadcumbs</instance-id>
      <access-permissions>Everyone</access-permissions>
	    <show-info-bar>false</show-info-bar>
	  </application>
	  
	  <page-body> </page-body>
	  
	  <application>
	    <instance-id>portal#classic:/web/FooterPortlet/footer</instance-id>
      <access-permissions>Everyone</access-permissions>
	    <show-info-bar>false</show-info-bar>
	  </application>
  </portal-layout>
  
</portal-config>
