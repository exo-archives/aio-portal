<?xml version="1.0" encoding="ISO-8859-1"?>
<portal-config decorator="exo" width="100%" height="100%">
  <portal-name>m6</portal-name>
  <locale>en</locale>
  <factory-id>office</factory-id>
  <access-permission>*:/guest,*:/user</access-permission>
  <edit-permission>*:/user</edit-permission>
  <creator>exoadmin</creator>
  
  <widget-layout/>
  
 	<portal-layout> 		
    <container template="system:/groovy/portal/webui/component/view/UITableColumnContainer.gtmpl">
      <container template="system:/groovy/portal/webui/component/view/UIContainer.gtmpl">
        <application>
          <instance-id>m6:/m6PortletWeb/BannerPortlet/banner</instance-id>
          <show-info-bar>false</show-info-bar>
        </application>

        <application>
          <instance-id>m6:/m6PortletWeb/BreadcumbsPortlet/breadcumbs</instance-id>
          <show-info-bar>false</show-info-bar>
        </application>

        <container template="system:/groovy/portal/webui/component/view/UITableColumnContainer.gtmpl">
          <container template="system:/groovy/portal/webui/component/view/UIContainer.gtmpl">
            <application>
              <instance-id>m6:/m6PortletWeb/ClockPortlet/clock</instance-id>
              <show-info-bar>false</show-info-bar>
            </application>
            <application>
              <instance-id>m6:/m6PortletWeb/StockInfoPortlet/stockinfo</instance-id>
              <show-info-bar>false</show-info-bar>
            </application>
            <application>
              <instance-id>m6:/m6PortletWeb/LoginPortlet/login</instance-id>
              <show-info-bar>false</show-info-bar>
            </application>
            <application>
              <instance-id>m6:/m6PortletWeb/AnnouncementPortlet/announcement</instance-id>
              <show-info-bar>false</show-info-bar>
            </application>
          </container>
          <page-body> </page-body>
        </container>

        <application>
          <instance-id>m6:/m6PortletWeb/FooterPortlet/footer</instance-id>
          <show-info-bar>false</show-info-bar>
        </application>
      </container>

      <container template="system:/groovy/portal/webui/component/view/UIContainer.gtmpl">
        <application>
          <instance-id>m6:/m6PortletWeb/MenuPortlet/menu</instance-id>
          <show-info-bar>false</show-info-bar>
        </application>
      </container>

    </container>
  </portal-layout>

</portal-config>
