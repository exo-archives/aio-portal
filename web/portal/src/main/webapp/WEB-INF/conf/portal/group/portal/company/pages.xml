<?xml version="1.0" encoding="ISO-8859-1"?>
<page-set>
  <page>
  	<owner-type>group</owner-type>
    <owner-id>company</owner-id>
    <name>home</name>
    <access-groups>/guest</access-groups>        
    <show-max-window>true</show-max-window>
    
    <application>
	    <instance-id>company:/site/SitePortlet/siteportlet</instance-id>
      <title>Company site portlet</title>
	    <show-info-bar>false</show-info-bar>
	  </application>
  </page>  
  
  <page>
 		<owner-type>group</owner-type>
    <owner-id>company</owner-id>
    <name>organization</name>
    <access-groups>/portal/company,/portal/admin</access-groups>
    
    <application>
      <instance-id>company:/exoadmin/OrganizationPortlet/Organization</instance-id>    
      <title>Organization portlet</title>
	  	<show-info-bar>true</show-info-bar>
	  	<show-application-state>true</show-application-state>
		</application>	
  </page>
  
  <page>
  	<owner-type>group</owner-type>
    <owner-id>company</owner-id>
    <name>myaccount</name>
    <access-groups>/portal/company</access-groups>
    
    <application>
      <instance-id>company:/exoadmin/AccountPortlet/Account</instance-id>    
      <title>Account portlet</title>
