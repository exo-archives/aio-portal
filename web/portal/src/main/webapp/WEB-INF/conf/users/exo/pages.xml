<?xml version="1.0" encoding="ISO-8859-1"?>
<page-set>  
  <page>    
		<owner>exo</owner>
    <name>content</name>
    <title>Content</title>
    <view-permission>*:/guest</view-permission>
    <application>
      <application-instance-id>exo:/content/ContentPortlet/contentportlet</application-instance-id>
      <show-info-bar>true</show-info-bar>
      <show-application-state>true</show-application-state>
      <show-application-mode>true</show-application-mode>
    </application>  
  </page>    
  
  <page>
    <owner>exo</owner>
    <name>sitemap</name>
    <title>Site Map</title>
    <view-permission>*:/guest</view-permission>        
    <application>
      <application-instance-id>exo:/web/SiteMapPortlet/sitemapportlet</application-instance-id>
      <show-info-bar>true</show-info-bar>
      <show-application-state>true</show-application-state>
      <show-application-mode>true</show-application-mode>
    </application>  
  </page>
 
  <page>
    <factory-id>Desktop</factory-id>
    <owner>exo</owner>
    <name>desktop</name>
    <title>Desktop</title>
    <view-permission>*:/guest</view-permission>        
    <show-max-window>true</show-max-window>
    
    <application>
      <title>Sitemap Portlet</title>
      <application-instance-id>exo:/web/SiteMapPortlet/SitemapPortlet</application-instance-id>
      <show-info-bar>true</show-info-bar>
    </application>  
    
    <application>
      <title>Content Portlet</title>
      <application-instance-id>exo:/content/ContentPortlet/content</application-instance-id>
      <show-info-bar>false</show-info-bar>
    </application>

    <application>
      <title>Account Portlet</title>
      <application-instance-id>exo:/exoadmin/AccountPortlet/Account</application-instance-id>
      <show-info-bar>false</show-info-bar>
    </application>  
  </page>
</page-set>
