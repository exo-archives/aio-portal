<?xml version="1.0" encoding="ISO-8859-1"?>
<portal-config decorator="community">
  <owner>@owner@</owner>
  <locale>en</locale>
  <viewPermission group="/guest" membership="*"/>

  <portalLayout>
    <portlet>
      <windowId>@owner@:/content/DisplayStaticContent/banner</windowId>
      <showInfoBar>false</showInfoBar>
      <portlet-preferences>
        <preference>
          <name>default</name>
          <value>id=war:/web-content/banner.html</value>
        </preference>
        <creator>@owner@</creator>
        <modifier>@owner@</modifier>
      </portlet-preferences>
    </portlet>

    <container renderer="ContainerColumnRenderer" decorator="community-toolbar">
      <portlet>
        <windowId>@owner@:/web/NavigationPortlet/community-toolbar</windowId>
        <portlet-style>community-toolbar</portlet-style>
        <showInfoBar>false</showInfoBar>
        <portlet-preferences>
          <preference>
            <name>template</name>
            <value>community/navigation/horizontal/popup.gtmpl</value>
            <read-only>false</read-only>
          </preference>      
          <creator>@owner@</creator>
          <modifier>@owner@</modifier>
        </portlet-preferences>            
      </portlet>
      <portlet width="325px">
        <title>Login</title>
        <windowId>@owner@:/user/WelcomePortlet/welcome-user</windowId>
        <portlet-style>community-login</portlet-style>
        <showInfoBar>false</showInfoBar>
      </portlet>
    </container>

    <portlet>
      <windowId>@owner@:/web/PortalModePortlet/portal-edit-mode</windowId>
      <portlet-style>portal-mode</portlet-style>
      <showInfoBar>false</showInfoBar>
    </portlet>
    
    <portlet>
      <windowId>@owner@:/web/PortalInfoPortlet/breadcumbs</windowId>
      <showInfoBar>false</showInfoBar>
      <portlet-preferences>
        <preference>
          <name>template</name>
          <value>community/breadcumbs.vm</value>
        </preference>
        <creator>@owner@</creator>
        <modifier>@owner@</modifier>
      </portlet-preferences>
    </portlet>

    <container renderer="ContainerColumnRenderer">
      <container>        
        <body>
          <componentType>page-node</componentType>
          <componentId>/</componentId>
        </body>
      </container>
    </container>
    <portlet>
      <windowId>@owner@:/content/DisplayStaticContent/footer</windowId>
      <showInfoBar>false</showInfoBar>
      <portlet-preferences>
        <preference>
          <name>default</name>
          <value>id=war:/web-content/footer.html</value>
        </preference>
        <creator>@owner@</creator>
        <modifier>@owner@</modifier>
      </portlet-preferences>
    </portlet>   
  </portalLayout>
</portal-config>
