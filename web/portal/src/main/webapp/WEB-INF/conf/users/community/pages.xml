<?xml version="1.0" encoding="ISO-8859-1"?>
<page-set>
  <page>
    <factory-id>Desktop</factory-id>
    <owner>community</owner>
    <name>home</name>
    <title>Home</title>
    <view-permission>*:/guest</view-permission>
    <show-max-window>true</show-max-window>
    
    <application>
	    <factory-id>portlet</factory-id>
	    <title>Site portlet</title>
      <application-instance-id>community:/site/SitePortlet/siteportlet</application-instance-id>
      <show-info-bar>false</show-info-bar>
    </application>
    
    <application>
	    <factory-id>portlet</factory-id>
	    <title>Content portlet</title>
      <application-instance-id>community:/content/ContentPortlet/contentportlet</application-instance-id>
      <show-info-bar>true</show-info-bar>
      <show-application-state>true</show-application-state>
      <show-application-mode>true</show-application-mode>
    </application>

    <application>
	    <factory-id>portlet</factory-id>
	    <title>Browse portlet</title>
      <application-instance-id>exoadmin:/ecm/BrowseContentPortlet/browsecontent</application-instance-id>
      <show-info-bar>true</show-info-bar>
    </application>

    <application>
	    <factory-id>portlet</factory-id>
	    <title>Account portlet</title>
      <application-instance-id>community:/exoadmin/AccountPortlet/Account</application-instance-id>
      <show-info-bar>false</show-info-bar>
    </application>  
  </page>

  <page>
    <factory-id>Desktop</factory-id>
    <owner>community</owner>
    <name>management</name>
    <title>Management</title>
    <view-permission>owner:/user</view-permission>
    <show-max-window>true</show-max-window>
    
    <application>
	    <factory-id>portlet</factory-id>
	    <title>Organization portlet</title>
      <application-instance-id>community:/exoadmin/OrganizationPortlet/Organization</application-instance-id>
      <show-info-bar>true</show-info-bar>
      <show-application-state>true</show-application-state>
    </application>  

    <application>
	    <factory-id>portlet</factory-id>
      <title>Account portlet</title>
      <application-instance-id>community:/exoadmin/AccountPortlet/Account</application-instance-id>
      <show-info-bar>false</show-info-bar>
    </application>  
  </page>
</page-set>
