<%
  import org.exoplatform.portal.config.model.Container;
	import org.exoplatform.webui.core.UIPopupWindow;
	
	def rcontext = _ctx.getRequestContext() ;
	rcontext.getJavascriptManager().importJavascript('eXo.webui.UIPopupWindow');  
  List containers = uicomponent.getContainers() ;
  Container selectedContainer = uicomponent.getSelectedContainer() ; 
%>


<div class="UIWidgetContainerManagement" id="UIGadgetContainerManagement">
	<div class="UIBarStyle">
		<div class="TitleBar">
			<div class="LeftBar">
				<div class="RightBar">
					<div class="MiddleBar"><%=_ctx.appRes("UIWidgetContainerManagement.title.manager")%></div>
				</div>
			</div>
		</div>
	</div>
	<div class="ContainerManagementBlock">
		<div class="ContainerManagementDetail">
			<div class="WidgetContainerCategory">
				<div class="CategoryTitleBar">
					<div class="Title"><%=_ctx.appRes("UIWidgetContainerManagement.title.containers")%></div>
					<a class="RemoveContainer Icon" href="<%=uicomponent.event("DeleteContainer")%>" title="<%=_ctx.appRes("UIWidgetContainerManagement.tooltip.remove")%>"><span></span></a>
					<a class="EditContainer Icon" href="<%=uicomponent.event("EditContainer")%>" title="<%=_ctx.appRes("UIWidgetContainerManagement.tooltip.edit")%>"><span></span></a>
					<a class="AddContainer Icon" href="<%=uicomponent.event("AddContainer")%>" title="<%=_ctx.appRes("UIWidgetContainerManagement.tooltip.addnew")%>"><span></span></a>
					<div style="clear: both"><span></span></div>
				</div>
				<div class="UserWidgetContainer">
					<div class="ContainerList">
						<%
						if(containers == null || containers.size() < 1) {
						%>
							<div class="EmptyListMessage"><%=_ctx.appRes("UIWidgetContainerManagement.msg.emptyList")%></div>
						<%} else {
						for(container in containers) {
							String itemClass = "NormalItem" ;
							if(selectedContainer!= null && container.getId().equals(selectedContainer.getId())) itemClass = "SelectedItem" ;
						%>
							<div class="<%=itemClass%>" onclick="<%=uicomponent.event("ChangeContainer", "$container.id")%>">
								<div class="Label"><%=container.getName()%></div>
							</div>
						<%}%>
						<%}%>
					</div>
				</div>
			</div>
			<div class="WidgetContainerView">
				<div class="WidgetContainerDetail">
					<div class="ContainerDetail">
						<div class="HeadTitle"><%=_ctx.appRes("UIWidgetContainerManagement.title.selectedContainer")%></div>
						<div class="Detail">
							<% if(selectedContainer == null) {%>
								<div class="Empty"><%=_ctx.appRes("UIWidgetContainerManagement.msg.noSelected")%></div>
							<% } else {%>
							<div class="InfoContent">
								<div>
									<div class="Label"><%=_ctx.appRes("UIWidgetContainerManagement.label.label")%></div>
									<div class="FieldComponent"><%=selectedContainer.getName()%></div>
								</div>
								<div>
									<div class="Label"><%=_ctx.appRes("UIWidgetContainerManagement.label.description")%></div>
									<%
									String cDescription = selectedContainer.getDescription() ;
									if(cDescription == null) cDescription = "" ;
									else cDescription = cDescription.replaceAll("\n","<br>");
									%>
									<div class="FieldComponent"><span><%=cDescription%></span></div>
								</div>
							</div>
							<% } %>
						</div>
					</div>
				</div>
			</div>
			<div style="clear: left"><span></span></div>
		</div>
	</div>
	
	<div class="UIAction">
		<table class="ActionContainer" align="center">
			<tr>

				<td align="center">
					<a class="ActionButton LightBlueStyle" href="<%=uicomponent.event("Save")%>">
						<div class="ButtonLeft">
							<div class="ButtonRight">
								<div class="ButtonMiddle"><%=_ctx.appRes(uicomponent.getId() + ".action.save")%></div>
							</div>
						</div>
					</a>
				</td>
			
				<td align="center">
					<a class="ActionButton LightBlueStyle" href="<%=uicomponent.event("Close")%>">
						<div class="ButtonLeft">
							<div class="ButtonRight">
								<div class="ButtonMiddle"><%=_ctx.appRes(uicomponent.getId() + ".action.close")%></div>
							</div>
						</div>
					</a>
				</td>				
			</tr>
		</table>
	</div>
	<%uicomponent.renderChild(UIPopupWindow.class);%>
</div>
