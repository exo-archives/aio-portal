<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
 PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
  "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  <display-name>eXoWidgetWeb</display-name>
  <context-param>
    <param-name>exo.application</param-name>
    <param-value>
      org.exoplatform.widget.web.InfoWidget,
      org.exoplatform.widget.web.WelcomeWidget,
      org.exoplatform.widget.web.StickerWidget,
      org.exoplatform.widget.web.CalendarWidget,
      org.exoplatform.widget.web.CalculatorWidget,
      org.exoplatform.widget.web.CometdWidget

    </param-value>
  </context-param>  
  
  <filter>
    <filter-name>ResourceRequestFilter</filter-name>
    <filter-class>org.exoplatform.portal.application.ResourceRequestFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>ResourceRequestFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>  
  
	<listener>
    <listener-class>org.exoplatform.web.application.ApplicationRegister</listener-class>
  </listener>

</web-app>
