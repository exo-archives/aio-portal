<?xml version="1.0" encoding="UTF-8"?>
<portlet-app version="1.0" xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd"> 
  
  <portlet>
    <description xml:lang="EN">New Framework Portlet</description>
    <portlet-name>FrameworkPortlet</portlet-name>
    <display-name xml:lang="EN">FrameworkPortlet</display-name>
    <portlet-class>org.exoplatform.sample.portlet.mvc.SamplePortlet</portlet-class>
    
    <expiration-cache>0</expiration-cache>
    <supports>
      <mime-type>text/html</mime-type>
    </supports>
    <supported-locale>en</supported-locale>
    
    <resource-bundle>locale.portlet.sample.SamplePortlet</resource-bundle>
    <portlet-info>
      <title>Sample MVC Portlet</title>
      <short-title>Sample MVC</short-title>
      <keywords>sample</keywords>
    </portlet-info>

    <portlet-preferences>
    	<preference>
        <name>configure.template</name>
        <value>app:/templates/test/ConfigureTemplate.jstmpl</value>
        <read-only>false</read-only>
      </preference>
    </portlet-preferences>
  </portlet>  
  
</portlet-app>
