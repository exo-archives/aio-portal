<?xml version="1.0" encoding="UTF-8"?>
<portlet-app version="1.0" xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd"> 
  <portlet>
    <description xml:lang="EN">Site Portlet</description>
    <portlet-name>SitePortlet</portlet-name>
    <display-name xml:lang="EN">Site Portlet</display-name>
    <portlet-class>org.exoplatform.webui.application.portlet.PortletApplicationController</portlet-class>    
    
    <init-param>
      <name>webui.configuration</name>
      <value>/WEB-INF/conf/portlet/site/SitePortlet/webui/configuration.xml</value>
    </init-param>    

    <expiration-cache>0</expiration-cache>
    <supports>
      <mime-type>text/html</mime-type>
      <portlet-mode>help</portlet-mode>
    </supports>
    <supported-locale>en</supported-locale>
    <resource-bundle>locale.portlet.site.SitePortlet</resource-bundle>
    <portlet-info>
      <title>Site</title>
      <short-title>Site</short-title>
      <keywords>company</keywords>
    </portlet-info>    
    
    <portlet-preferences>
      <preference>
        <name>site.location</name>
        <value>par:/company</value>
        <read-only>false</read-only>
      </preference>
    </portlet-preferences>
   
  </portlet>
</portlet-app>
