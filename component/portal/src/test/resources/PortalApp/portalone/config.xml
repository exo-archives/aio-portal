<?xml version="1.0" encoding="ISO-8859-1"?>
<portal-config decorator="exo" width="100%" height="100%">
  <owner>portalone</owner>
  <locale>en</locale>
  <access-group>*:/guest</access-group>
  
  <widget-layout>
    <container>
      <application>
        <factory-id>widget</factory-id>
        <application-instance-id>exo:/widget/info</application-instance-id>
        <show-info-bar>false</show-info-bar>
        <show-application-state>false</show-application-state>
        <show-application-mode>false</show-application-mode>
      </application>
    </container>
  </widget-layout>

	<portal-layout>
	  <application>
		  <factory-id>portlet</factory-id>
	    <application-instance-id>exo:/content/DisplayStaticContent/banner</application-instance-id>
	    <show-info-bar>false</show-info-bar>
	  </application>
	
	  <application>
		  <factory-id>portlet</factory-id>
	    <application-instance-id>exo:/nav/HorizontalMenu/toolbar</application-instance-id>
	    <show-info-bar>false</show-info-bar>
	  </application>
	
	  <container template="war:/groovy/portal/view/UIContainerTableColumn.gtmpl" height="100%">
	    <container decorator="menu" width="200px">	      
	      <application>
		      <factory-id>portlet</factory-id>
	        <application-instance-id>exo:/nav/Menu/menu</application-instance-id>
	        <show-info-bar>false</show-info-bar>
	      </application>
	      
	      <application>
	      	<factory-id>portlet</factory-id>
	        <title>Welcome</title>
	        <application-instance-id>exo:/user/WelcomePortlet/welcome-user</application-instance-id>
	        <show-info-bar>false</show-info-bar>
	      </application>
	      
	      <application>
		      <factory-id>portlet</factory-id>
	        <application-instance-id>exo:/content/DisplayStaticContent/download</application-instance-id>
	        <show-info-bar>false</show-info-bar>
	      </application>
	      
	      <application>
	        <application-instance-id>exo:/nav/VisitedPagesPortlet/visited-page</application-instance-id>
	        <show-info-bar>false</show-info-bar>
	      </application>
	      
	    </container>
	    
	    <container>
	      <application height="20px">
		      <factory-id>portlet</factory-id>
	        <application-instance-id>exo:/nav/Breadcrumbs/breadcrumbs</application-instance-id>
	        <show-info-bar>false</show-info-bar>
	      </application>
	      <page-body>
	        <page-node-reference>/</page-node-reference>
	      </page-body>
	    </container>
	  </container>
	
	  <application>
		  <factory-id>portlet</factory-id>
	    <application-instance-id>exo:/content/DisplayStaticContent/footer</application-instance-id>
	    <show-info-bar>false</show-info-bar>
	  </application>   
	</portal-layout>  
</portal-config>
