<?xml version="1.0" encoding="ISO-8859-1"?>
<portal-config decorator="exo" width="100%" height="100%">
  <owner>exo</owner>
  <locale>en</locale>
  <view-permission>*:/guest</view-permission>

  <portlet>
    <window-id>exo:/content/DisplayStaticContent/banner</window-id>
    <show-info-bar>false</show-info-bar>
  </portlet>

  <portlet>
    <window-id>exo:/nav/HorizontalMenu/toolbar</window-id>
    <portlet-style>horizontal</portlet-style>
    <show-info-bar>false</show-info-bar>
  </portlet>

  <container template="war:/groovy/portal/view/UIContainerTableColumn.gtmpl" height="100%">
    <container decorator="menu" width="200px">
      <portlet>
        <window-id>exo:/nav/Menu/menu</window-id>
        <portlet-style>menu</portlet-style>
        <show-info-bar>false</show-info-bar>
      </portlet>
      <portlet>
        <title>Welcome</title>
        <window-id>exo:/user/WelcomePortlet/welcome-user</window-id>
        <portlet-style>welcome</portlet-style>
        <show-info-bar>false</show-info-bar>
      </portlet>
      <portlet>
        <window-id>exo:/content/DisplayStaticContent/download</window-id>
        <portlet-style>exo-config-content</portlet-style>
        <show-info-bar>false</show-info-bar>
      </portlet>
      <portlet>
        <window-id>exo:/nav/VisitedPagesPortlet/visited-page</window-id>
        <portlet-style>visited-pages</portlet-style>
        <show-info-bar>false</show-info-bar>
      </portlet>
    </container>
    <container>
      <portlet height="20px">
        <window-id>exo:/nav/Breadcrumbs/breadcrumbs</window-id>
        <portlet-style>breadcrumbs</portlet-style>
        <show-info-bar>false</show-info-bar>
      </portlet>
      <page-body>
        <page-node-reference>/</page-node-reference>
      </page-body>
    </container>
  </container>

  <portlet>
    <window-id>exo:/content/DisplayStaticContent/footer</window-id>
    <show-info-bar>false</show-info-bar>
  </portlet>   
</portal-config>
