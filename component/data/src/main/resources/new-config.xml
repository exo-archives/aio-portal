<?xml version="1.0" encoding="ISO-8859-1"?>
<portal-config decorator="exo" width="100%" height="100%">
  <factory-id>office</factory-id>
  <owner>exo</owner>
  <locale>en</locale>
  <view-permission>*:/guest</view-permission>

  <widget-layout>
    <container>
      <application>
        <factory-id>widget</factory-id>
        <application-instance-id>exo:/widget/info</application-instance-id>
        <show-info-bar>false</show-info-bar>
        <show-application-state>false</show-application-state>
        <show-application-mode>false</show-application-mode>
      </application>
    </container>
  </widget-layout>

  <portal-layout>
    <application>
      <factory-id>portlet</factory-id>
      <application-instance-id>exo:/web/BannerPortlet/banner</application-instance-id>
      <show-info-bar>false</show-info-bar>
      <show-application-state>false</show-application-state>
      <show-application-mode>false</show-application-mode>
    </application>

    <application>
      <factory-id>portlet</factory-id>
      <application-instance-id>exo:/web/NavigationPortlet/toolbar</application-instance-id>
      <show-info-bar>false</show-info-bar>
    </application>

    <application>
      <factory-id>portlet</factory-id>
      <application-instance-id>exo:/web/BreadcumbsPortlet/breacumbs</application-instance-id>
      <show-info-bar>false</show-info-bar>
    </application>

    <page-body/> 

    <application>
      <factory-id>portlet</factory-id>
      <application-instance-id>exo:/web/FooterPortlet/footer</application-instance-id>
      <show-info-bar>false</show-info-bar>
    </application>
  </portal-layout>

</portal-config>
