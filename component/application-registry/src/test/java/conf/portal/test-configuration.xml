<?xml version="1.0" encoding="ISO-8859-1"?>
<configuration>
  <component>
    <key>org.exoplatform.services.portletregistery.PortletRegisteryService</key>
    <type>org.exoplatform.services.portletregistery.JCRPortletRegisteryService</type>
    <init-params>
      <object-param>
        <name>default.portlet.permission.1</name>
        <description>Default portlet permission when importing the portlet</description>
        <object type="org.exoplatform.services.portletregistery.PortletPermission">
          <field  name="membership"><string>member</string></field>
          <field  name="groupId"><string>/user</string></field>
          <field  name="description"><string>default user permission</string></field>
        </object>
      </object-param>
    </init-params>
  </component>

  <import>classpath:/conf/portal/testjcr/test-jcr-configuration.xml</import> 

</configuration>
