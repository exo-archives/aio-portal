<project>
  <parent>
    <groupId>org.exoplatform.portal</groupId>
    <artifactId>config</artifactId>
    <version>2.0</version>
  </parent> 

  <modelVersion>4.0.0</modelVersion>
  <artifactId>exo.portal.component.portlet-registry</artifactId>
  <name>eXo Portlet Registery Service</name>
  <packaging>jar</packaging> 
  <version>${org.exoplatform.portal.version}</version>
  <description>eXo Portlet Registery Service</description>

  <dependencies>
    <dependency>
      <groupId>org.exoplatform.portal</groupId>
      <artifactId>exo.portal.component.resources</artifactId>
      <version>${org.exoplatform.portal.version}</version>
    </dependency>

    <dependency>
      <groupId>exo-portlet-container</groupId>
      <artifactId>exo-portlet-container.services.jsr168.api</artifactId>
      <version>${org.exoplatform.pc.version}</version>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <phase>compile<!--process-classes--></phase>
            <configuration>
              <tasks>
                <taskdef name="hibernatedoclet" classname="xdoclet.modules.hibernate.HibernateDocletTask" 
                         classpathref="maven.dependency.classpath"/>
                  <hibernatedoclet destdir="target/classes" excludedtags="@version,@author,@todo" 
                                   mergedir="target/classes" force="true">
                  <fileset dir="src/main/java">
                    <include name="org/exoplatform/services/portletregistery/PortletCategory.java"/>
                    <include name="org/exoplatform/services/portletregistery/Portlet.java"/>
                    <include name="org/exoplatform/services/portletregistery/PortletPermission.java"/>
                  </fileset>
                  <hibernate version="3.0"/>
                </hibernatedoclet>
              </tasks>
            </configuration>
            <goals><goal>run</goal></goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>  
</project>
