<configuration>
  <component>
    <key>org.exoplatform.services.portletregistery.PortletRegisteryService</key>
    <type>org.exoplatform.services.portletregistery.HibernatePortletRegisteryService</type>
    <init-params>
      <object-param>
        <name>default.portlet.permission.1</name>
        <description>Default portlet permission when importing the portlet</description>
        <object type="org.exoplatform.services.portletregistery.PortletPermission">
          <field  name="membership"><string>member</string></field>
          <field  name="groupId"><string>/user</string></field>
          <field  name="description"><string>default user permission</string></field>
        </object>
      </object-param>
    </init-params>
  </component>

  <external-component-plugins>
    <target-component>org.exoplatform.services.database.HibernateService</target-component>
    <component-plugin> 
      <name>add.hibernate.mapping</name>
      <set-method>addPlugin</set-method>
      <type>org.exoplatform.services.database.impl.AddHibernateMappingPlugin</type>
      <init-params>
        <values-param>
          <name>hibernate.mapping</name>
          <value>org/exoplatform/services/portletregistery/PortletCategory.hbm.xml</value>
          <value>org/exoplatform/services/portletregistery/Portlet.hbm.xml</value>
          <value>org/exoplatform/services/portletregistery/PortletPermission.hbm.xml</value>
        </values-param>
      </init-params>
    </component-plugin>
  </external-component-plugins>
</configuration>
